import java.util.*;

class Solution {

    public boolean isCyclic(int V, ArrayList<ArrayList<Integer>> adj) {

        boolean[] vis = new boolean[V];
        boolean[] recPath = new boolean[V];

        for (int i = 0; i < V; i++) {
            if (!vis[i]) {
                if (dfs(i, adj, vis, recPath))
                    return true;
            }
        }
        return false;
    }

    private boolean dfs(int curr, ArrayList<ArrayList<Integer>> adj,
                        boolean[] vis, boolean[] recPath) {

        vis[curr] = true;
        recPath[curr] = true;

        ArrayList<Integer> neighs = adj.get(curr);

        for (int i = 0; i < neighs.size(); i++) {
            int v = neighs.get(i);

            if (!vis[v]) {
                if (dfs(v, adj, vis, recPath))
                    return true;
            }
            else if (recPath[v]) {
                return true;   // cycle detected
            }
        }

        recPath[curr] = false; // backtracking
        return false;
    }
}
